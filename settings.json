{
  "[python]": {
    "editor.formatOnType": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "auto-close-tag.disableOnLanguage": [
    "ts",
    "js"
  ],
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "chat.editor.fontSize": 10,
  "cmake.showOptionsMovedNotification": false,
  "code-runner.runInTerminal": true,
  "debug.console.fontSize": 10,
  "editor.cursorBlinking": "smooth",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 800,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "files.eol": "\n",
  "git.openRepositoryInParentFolders": "never",
  "git.postCommitCommand": "push",
  "git.showCommitInput": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "javascript.autoClosingTags": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "markdown.preview.fontSize": 12,
  "open-in-browser.default": "chrome",
  "scm.inputFontSize": 10,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.osxExec": "wezterm.app",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "typescript.autoClosingTags": false,
  // vim
  // im-select
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/true",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
  // easymotion
  "vim.easymotion": true,
  "vim.easymotionKeys": "ashtgyneoidrwfupxmcl,.",
  // 検索をハイライト
  "vim.hlsearch": true,
  // vim-keybindings
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "w"
      ],
      "command": [
        "workbench.action.save"
      ]
    },
    // ズーム
    {
      "before": [
        "<leader>",
        "-"
      ],
      "commands": [
        "workbench.action.zoomOut"
      ]
    }, // 縮小
    {
      "before": [
        "<leader>",
        "+"
      ],
      "commands": [
        "workbench.action.zoomIn"
      ]
    }, // 拡大
    {
      "before": [
        "<leader>",
        "0"
      ],
      "commands": [
        "workbench.action.zoomReset"
      ]
    }, // リセット
    {
      "after": [
        "<leader>",
        "<leader>",
        "2",
        "s",
        "<char>",
        "<char>"
      ],
      "before": [
        "s"
      ]
    }, // easymotion2文字->s
    // 改行してても上下に移動
    {
      "before": [
        "j"
      ],
      "after": [
        "g",
        "j"
      ]
    },
    {
      "before": [
        "<down>"
      ],
      "after": [
        "g",
        "<down>"
      ]
    },
    {
      "before": [
        "k"
      ],
      "after": [
        "g",
        "k"
      ]
    },
    {
      "before": [
        "<up>"
      ],
      "after": [
        "g",
        "<up>"
      ]
    },
    // ハイライト消す
    {
      "before": [
        "<Leader>",
        "z"
      ],
      "commands": [
        ":noh"
      ]
    },
    // zen mode toggle
    {
      "before": [
        "<Leader>",
        "Z"
      ],
      "commands": [
        "workbench.action.toggleZenMode"
      ]
    },
    // 改行してもノーマルモード
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [
        "o",
        "<ESC>"
      ]
    },
    {
      "before": [
        "<leader>",
        "O"
      ],
      "after": [
        "O",
        "<ESC>"
      ]
    },
    // ウィンドウ系
    {
      "before": [
        "<enter>",
        "<enter>"
      ],
      "commands": [
        "workbench.action.focusNextGroup"
      ]
    }, // 隣のウィンドウに移動
    {
      "before": [
        "<Leader>",
        "v",
        "v"
      ],
      "commands": [
        "workbench.action.splitEditor"
      ]
    }, // 分割
    {
      "before": [
        "<Leader>",
        "x"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    }, // ファイル閉じる
    {
      "before": [
        "<Leader>",
        "X"
      ],
      "commands": [
        "workbench.action.closeEditorsInGroup"
      ]
    }, // ウィンドウ内のファイル閉じる
    {
      "before": [
        "<Leader>",
        "/"
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    }, // ウィンドウ内のファイル閉じる
    {
      "commands": [
        "workbench.action.moveEditorToNextGroup"
      ],
      "before": [
        "h",
        "o"
      ]
    }, // アクティブファイルを右のウィンドウに移す
    {
      "commands": [
        "workbench.action.moveEditorToPreviousGroup"
      ],
      "before": [
        "h",
        "y"
      ]
    }, // アクティブファイルを左のウィンドウに移す
    {
      // コマンドパレット表示
      "before": [
        "<Leader>",
        ":"
      ],
      "commands": [
        "workbench.action.showCommands"
      ]
    },
    // ファイル名検索
    {
      "before": [
        "<Leader>",
        "s",
        "t"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<Leader>",
        "e"
      ],
      "commands": [
        "workbench.view.explorer"
      ]
    },
    {
      "before": [
        "<Leader>",
        "E"
      ],
      "commands": [
        "workbench.files.action.showActiveFileInExplorer"
      ]
    },
    {
      "before": [
        "<Leader>",
        "w"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<Leader>",
        "l",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "<Leader>",
        "l",
        "n"
      ],
      "commands": [
        "editor.action.marker.nextInFiles"
      ]
    },
    {
      "before": [
        "<Leader>",
        "l",
        "d"
      ],
      "commands": [
        "workbench.actions.view.problems"
      ]
    },
    {
      "before": [
        "<Leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<Leader>",
        "s",
        "t"
      ],
      "commands": [
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.showHover"
      ]
    }, // ホバー表示
    {
      "before": [
        "<Leader>",
        "r",
        "n"
      ],
      "commands": [
        "editor.action.rename"
      ]
    }, // シンボル変更
    {
      "before": [
        "<Leader>",
        "s",
        "s"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ]
    }, // シンボル検索
    {
      "before": [
        "<Leader>",
        "k"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    }, // 参照を見る
    {
      "before": [
        "<Leader>",
        "k",
        "g"
      ],
      "commands": [
        "workbench.view.scm"
      ]
    }, // サイドバー（Git）
    {
      "before": [
        "<Leader>",
        "k",
        "x"
      ],
      "commands": [
        "workbench.view.extensions"
      ]
    }, // サイドバー（拡張機能）
    {
      "before": [
        "<Leader>",
        "k",
        "d"
      ],
      "commands": [
        "workbench.view.debug"
      ]
    }, // サイドバー（デバッグ）
    // harpoon
    {
      "before": [
        "ctrl+e"
      ],
      "commands": [
        "vscode-harpoon.editorQuickPick"
      ]
    }, // quickPick
    {
      "before": [
        "<Leader>",
        "a"
      ],
      "commands": [
        "vscode-harpoon.addEditor"
      ]
    }, // add editor
    {
      "before": [
        "ctrl+h"
      ],
      "commands": [
        "vscode-harpoon.editEditors"
      ]
    }, // edit Editors
    {
      "before": [
        "space",
        "1"
      ],
      "commands": [
        "vscode-harpoon.gotoEditor1"
      ]
    }, // goto1
    {
      "before": [
        "space",
        "2"
      ],
      "commands": [
        "vscode-harpoon.gotoEditor2"
      ]
    }, // goto2
    {
      "before": [
        "space",
        "3"
      ],
      "commands": [
        "vscode-harpoon.gotoEditor3"
      ]
    }, // goto3
    {
      "before": [
        "space",
        "4"
      ],
      "commands": [
        "vscode-harpoon.gotoEditor4"
      ]
    }, // goto4
    {
      "before": [
        "space",
        "h",
        "1"
      ],
      "commands": [
        "vscode-harpoon.addEditor1"
      ]
    }, // add 1
    {
      "before": [
        "space",
        "h",
        "2"
      ],
      "commands": [
        "vscode-harpoon.addEditor2"
      ]
    }, // add 2
    {
      "before": [
        "space",
        "h",
        "3"
      ],
      "commands": [
        "vscode-harpoon.addEditor3"
      ]
    }, // add 3
    {
      "before": [
        "space",
        "h",
        "4"
      ],
      "commands": [
        "vscode-harpoon.addEditor4"
      ]
    }, // add 4
    {
      "before": [
        "<Leader>",
        "g",
        "c"
      ],
      "commands": [
        "git.openChange"
      ]
    },
    {
      "before": [
        "<Leader>",
        "s",
        "b"
      ],
      "command": [
        "workbench.action.quickOpenNavigatePrevious"
      ],
    }
  ],
  "vim.smartRelativeLine": true,
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindings": [
    // 文字→単語→括弧内→一行
    {
      "before": [
        "g",
        "o"
      ],
      "commands": [
        "editor.action.smartSelect.expand"
      ]
    },
    {
      "before": [
        "g",
        "y"
      ],
      "commands": [
        "editor.action.smartSelect.shrink"
      ]
    },
    {
      "before": [
        "j"
      ],
      "after": [
        "g",
        "j"
      ]
    },
    {
      "before": [
        "k"
      ],
      "after": [
        "g",
        "k"
      ]
    },
    {
      "before": [
        "s"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "2",
        "s",
        "<char>",
        "<char>"
      ]
    },
    {
      "before": [
        "<Leader>",
        "l",
        "a"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
  ],
  "vim.visualstar": true, // visualmodeで*使用可能
  "vim.foldfix": true,
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.debuggingForeground": "#ffffff",
    "statusBar.foreground": "#ffffff",
    "statusBar.noFolderBackground": "#005f5f",
    "editor.selectionBackground": "#64687fca" // 選択部分が見えづらいので追加
  },
  "workbench.colorTheme": "Serendipity Midnight",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "always",
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.restore": false,
  "glassit.alpha": 200,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "zenMode.fullScreen": false,
  "zenMode.showTabs": "none",
  "breadcrumbs.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "search.mode": "reuseEditor",
  "search.searchEditor.singleClickBehaviour": "peekDefinition",
  "search.showLineNumbers": true,
  "search.sortOrder": "fileNames",
  "editor.fontFamily": "UbuntuSansMono Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "UbuntuSansMono Nerd Font Mono",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command"
  ],
  "gitlens.graph.minimap.enabled": false,
  "vim.cursorStylePerMode.insert": "block",
  "editor.rulers": [
    80
  ],
  "workbench.statusBar.visible": false
}